---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import ReactNative from "./icons/ReactNative.astro"
import Vite from "./icons/Vite.astro"

const TAGS = {
  VITE: {
    name: "Vite",
    class: "bg-white text-black border border-gray-200",
    icon: Vite,
  },
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-white text-black border border-gray-200",
    icon: ReactNative,
  },
  NEXT: {
    name: "Next.js",
    class: "bg-white text-black border border-gray-200",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-white text-black border border-gray-200",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Pawfolio - Perfiles para mascotas",
    description:
      "Plataforma para crear perfiles para mascotas, crear recordatorios de vacunas, crear historias de vida, etc.",
    link: "https://pawfolio.pet/",
    image: "/projects/pawfolio.png",
    tags: [TAGS.REACT_NATIVE],
    number: "01",
    color: "text-[#73B1A1]",
    borderColor: "border-[#73B1A1]",
    bgColor: "bg-[#f8faf9]",
    imageBg: "bg-[#73B1A1]"
  },
  {
    title: "Trazel - Digitaliza tu negocio",
    description:
      "Registra tus ventas, gastos, inventario, tienda virtual, clientes, proveedores, todo para tu negocio",
    link: "https://trazel.app/",
    image: "/projects/spendWiser.png",
    tags: [TAGS.REACT_NATIVE, TAGS.NEXT],
    github: "https://github.com/DanielSuarezDev/SpendWiser",
    number: "02",
    color: "text-[#9747FF]",
    borderColor: "border-[#9747FF]",
    bgColor: "bg-[#f9f6fc]",
    imageBg: "bg-[#9747FF]"
  },
  {
    title: "SpendWiser - Gestiona tu dinero",
    description:
      "App para llevar el registro de las compras en el supermercado, crear listas de la compra, etc.",
    link: "https://www.spendwiser.click/",
    image: "/projects/spendWiser.png",
    tags: [TAGS.TAILWIND, TAGS.NEXT],
    number: "03",
    color: "text-[#333333]",
    borderColor: "border-[#333333]",
    bgColor: "bg-[#f8f8f8]",
    imageBg: "bg-[#333333]"
  },
]
---

<section class="w-full max-w-6xl mx-auto px-4 py-12">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
    <div>
      <h2 class="text-3xl font-bold text-gray-800">Mis Proyectos</h2>
      <p class="text-gray-600">Algunos de los proyectos que he creado</p>
    </div>
    <a href="#" class="mt-6 md:mt-0 flex items-center gap-2 text-[#9747FF] border border-[#9747FF] rounded-full px-4 py-2 hover:bg-[#f9f6fc] transition-colors">
      Ver más <span class="inline-block transform rotate-45">↑</span>
    </a>
  </div>

  <div class="space-y-8">
    {PROJECTS.map((project) => (
      <div class={`${project.bgColor} border border-gray-100 rounded-xl p-8 overflow-hidden`}>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <div class={`text-5xl font-bold ${project.color} mb-4`}>
              {project.number}
            </div>
            
            <div class="flex flex-wrap gap-2 mb-4">
              {project.tags.map((tag) => (
                <span class={`flex items-center gap-1 rounded-full text-xs ${tag.class} py-1 px-2`}>
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              ))}
            </div>
            
            <h3 class={`text-2xl font-bold ${project.color} mb-3`}>{project.title}</h3>
            <p class="text-gray-600 mb-6">{project.description}</p>
            
            <div class="flex gap-2">
              {project.github && (
                <a href={project.github} class="flex items-center gap-2 bg-black text-white px-4 py-2 rounded-full hover:bg-gray-800 transition-colors">
                  <GitHub class="size-5" />
                  Code
                </a>
              )}
              <a href={project.link} class={`flex items-center gap-2 border ${project.borderColor} text-gray-700 px-4 py-2 rounded-full hover:bg-gray-50 transition-colors`}>
                <span class="w-4 h-4 rounded-full bg-green-500 flex items-center justify-center">
                  <span class="w-1.5 h-1.5 bg-white rounded-full"></span>
                </span>
                Preview
              </a>
            </div>
          </div>
          
          <div class="relative">
            <div class={`${project.imageBg} p-3 rounded-xl overflow-hidden shadow-lg`}>
              <div class="bg-gray-100 rounded-lg overflow-hidden">
                <img 
                  src={project.image || "/placeholder.svg"} 
                  alt={project.title} 
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

